<!DOCTYPE html>
<html>
<head>
    <title>AI Travel Agent</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
</head>
<body>

<div class="container">
    <header class="header">
        <h1>AI Travel Agent</h1>
        <p class="subtitle">Smart trip planning — Flights, Hotels, Cars, Weather & Visa</p>
    </header>

    <section class="hero">
        <div class="hero-inner">
            <h2>Your Personalized Travel Plan</h2>
            <p class="hero-sub">Get a curated multi-day itinerary with flights, hotels, weather, visa info and budget — tailored for you.</p>
        </div>
    </section>

    <section class="search-panel">
        <form id="searchForm" action="/search" method="POST">
            <textarea 
                id="queryInput"
                name="query" 
                placeholder="Example: Plan my 5-day Paris trip under $3000 with weather and visa info"
                required
            ></textarea>

            <div class="controls">
                <button id="searchBtn" type="submit" class="btn-primary">Plan Trip</button>
                <button id="resetBtn" type="button" class="btn-ghost">Plan Another Trip</button>
            </div>
        </form>
    </section>

    <section id="resultArea" class="result" aria-live="polite">
        <div id="alert" class="alert hidden"></div>
        <div id="spinner" class="spinner hidden" aria-hidden="true"></div>
        <div id="resultsWrapper" class="results-wrapper hidden">
            <h2>Your Travel Plan</h2>
            <div class="travel-content" id="travelContent">
                <% if (response) { %>
                    <%- response %>
                <% } %>
            </div>
        </div>
    </section>

</div>

<script>
// Client-side behavior: use fetch to call /api/search, show spinner, errors, and animate results
const form = document.getElementById('searchForm');
const spinner = document.getElementById('spinner');
const alertBox = document.getElementById('alert');
const resultsWrapper = document.getElementById('resultsWrapper');
const travelContent = document.getElementById('travelContent');
const resetBtn = document.getElementById('resetBtn');
const queryInput = document.getElementById('queryInput');

function showSpinner() { spinner.classList.remove('hidden'); resultsWrapper.classList.add('hidden'); alertBox.classList.add('hidden'); }
function hideSpinner() { spinner.classList.add('hidden'); }
function showError(msg){ alertBox.textContent = msg; alertBox.classList.remove('hidden'); alertBox.classList.add('shake'); setTimeout(()=>alertBox.classList.remove('shake'),700); }
function transformToCards(html){
    const tmp = document.createElement('div');
    tmp.innerHTML = html;
    const sections = ['Flights','Hotels','Rental Cars','Weather','Visa','Budget Analysis','Itinerary'];
    const cards = document.createElement('div');
    cards.className = 'cards scroll-area';
    let foundAny = false;

    // find headings and group their following siblings into cards
    const headings = Array.from(tmp.querySelectorAll('h1,h2,h3,h4,h5,h6'));
    headings.forEach((h)=>{
        const text = h.textContent.trim();
        for(const s of sections){
            if(text.toLowerCase().includes(s.toLowerCase())){
                foundAny = true;
                const card = document.createElement('div'); card.className='card';
                const title = document.createElement('h4'); title.textContent = text; card.appendChild(title);
                // collect nodes after heading until next heading
                let node = h.nextSibling;
                while(node){
                    if(node.nodeType===1 && /^H[1-6]$/.test(node.tagName)) break;
                    card.appendChild(node.cloneNode(true));
                    node = node.nextSibling;
                }
                cards.appendChild(card);
                break;
            }
        }
    });

    if(foundAny){
        return cards.outerHTML;
    }
    return html;
}

function transformToCards(html){
    const tmp = document.createElement('div');
    tmp.innerHTML = html;
    const sections = ['Flights','Hotels','Rental Cars','Weather','Visa','Budget Analysis','Budget','Itinerary'];
    const cards = document.createElement('div');
    cards.className = 'cards scroll-area';
    let foundAny = false;

    // find headings and group their following siblings into cards
    const headings = Array.from(tmp.querySelectorAll('h1,h2,h3,h4,h5,h6'));
    headings.forEach((h)=>{
        const text = h.textContent.trim();
        for(const s of sections){
            if(text.toLowerCase().includes(s.toLowerCase())){
                foundAny = true;
                // determine type from heading
                let type = 'generic';
                if(/flight/i.test(text)) type='flight';
                if(/hotel/i.test(text)) type='hotel';
                if(/car|rental/i.test(text)) type='car';
                if(/visa/i.test(text)) type='visa';
                if(/weather/i.test(text)) type='weather';
                if(/budget/i.test(text)) type='budget';
                if(/itinerar/i.test(text) || /day\s*\d+/i.test(text)) type='itinerary';

                const card = document.createElement('div'); card.className='card '+type;
                const title = document.createElement('h4'); title.textContent = text; card.appendChild(title);
                // collect nodes after heading until next heading
                let node = h.nextSibling;
                while(node){
                    if(node.nodeType===1 && /^H[1-6]$/.test(node.tagName)) break;
                    card.appendChild(node.cloneNode(true));
                    node = node.nextSibling;
                }

                // special decorations
                if(type==='budget'){
                    // try to parse budget numbers from card text (budget, spent)
                    const txt = card.innerText || '';
                    const nums = Array.from(txt.matchAll(/\$?\s*(\d{1,3}(?:,\d{3})*(?:\.\d+)?)/g)).map(m=>m[1].replace(/,/g,''));
                    if(nums.length>=2){
                        const budget = parseFloat(nums[0]);
                        const spent = parseFloat(nums[1]);
                        const pct = Math.max(0, Math.min(100, Math.round((spent/budget)*100)));
                        const remaining = Math.round((budget - spent)*100)/100;
                        const bar = document.createElement('div'); bar.className='budget-bar';
                        bar.innerHTML = `<div class="budget-track"><div class="budget-fill" style="width:${pct}%"></div></div><div class="budget-meta">${remaining>=0?'<span class="under">Remaining: $'+Math.abs(remaining)+'</span>':'<span class="over">Over by: $'+Math.abs(remaining)+'</span>'} <span class="pct">(${pct}%)</span></div>`;
                        card.appendChild(bar);
                    }
                }

                if(type==='itinerary'){
                    // build simple timeline: split by lines containing 'Day'
                    const txt = card.innerText || '';
                    const parts = txt.split(/\n+/).map(s=>s.trim()).filter(Boolean);
                    const days = parts.filter(p=>/^day\s*\d+/i.test(p));
                    if(days.length>0){
                        const timeline = document.createElement('div'); timeline.className='timeline';
                        let nodeIter = h.nextSibling;
                        while(nodeIter){
                            if(nodeIter.nodeType===1 && /^H[1-6]$/.test(nodeIter.tagName)) break;
                            if(nodeIter.nodeType===3 || nodeIter.nodeName==='P' || nodeIter.nodeName==='DIV' || nodeIter.nodeName==='OL' || nodeIter.nodeName==='UL'){
                                const textBlock = nodeIter.textContent.trim();
                                const matches = textBlock.match(/(Day\s*\d+[:\-]?\s*)([\s\S]*)/i);
                                if(matches){
                                    const day = matches[1]; const body = matches[2];
                                    const dayEl = document.createElement('div'); dayEl.className='timeline-item'; dayEl.innerHTML = `<div class="dot"></div><div class="day"><strong>${day}</strong><div class="desc">${body}</div></div>`;
                                    timeline.appendChild(dayEl);
                                }
                            }
                            nodeIter = nodeIter.nextSibling;
                        }
                        if(timeline.children.length>0){
                            card.appendChild(timeline);
                        }
                    }
                }

    travelContent.innerHTML = '';
    resultsWrapper.classList.add('hidden');
    alertBox.classList.add('hidden');
    queryInput.focus();
});
</script>
</body>
</html>
